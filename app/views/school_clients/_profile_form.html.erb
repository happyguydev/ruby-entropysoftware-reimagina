<%= simple_form_for(@user, url: edit_profile_path, method: :post) do |f| %>

  <div class="field">
    <label>Nombre</label>
    <%= f.input :first_name, label: false, input_html: {class: 'form-control'} %>
  </div>
  <div class="field">
    <label>Apellido</label>
    <%= f.input :second_name, label: false, input_html: {class: 'form-control'} %>
  </div>
  <div class="field">
    <label>Email</label>
    <%= f.input :email, label: false, readonly: true, input_html: {class: 'form-control'} %>
  </div>

  <div class="field">
    <label>Contraseña</label>
    <%= f.input :password, label: false, input_html: {class: 'form-control'} %>
  </div>
  <div class="field">
    <label>Confirmar contraseña</label>
    <%= f.input :password_confirmation, label: false, input_html: {class: 'form-control'} %>
  </div>

  <div class="actions">
    <%= f.button :submit , 'Enviar'%>
  </div>
<% end %>
