<% if @school.present? %>
  <section class="content">
    <div class="row">
      <div class="col-xs-12">
        <div class="box col-sm-12 col-md-12 col-lg-12">
          <div class="box-header">
            <h3 class="box-title"><%=@school.nombre%></h3>
          </div>
          <!-- /.box-header -->
          <div class="box-body">
           <%if@school.logo.present?%>
              <div ><%=image_tag @school.logo.url,  size: "250"%></div>
               <%end%>
            Bienvenido al portal del establecimiento : <b><%=@school.nombre%></b>, en este sitio podr√°s acceder a todas las opciones disponibles
          </div>
        </div>
      </div>
    </div>
  </section>
  <% else %>
<section class="content">
  <div class="row">
    <div class="col-xs-12">
      <div class="box col-sm-12 col-md-12 col-lg-12">
        <div class="box-header">
          <h3 class="box-title">Mis Establecimientos</h3>
        </div>
        <!-- /.box-header -->
        <div class="box-body">
          <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
              <% if @assigned_schools.present? %>
                <% @assigned_schools.each do |assigned| %>
                    <div >
                      <div class="box box-primary">
                        <div class="box-body box-profile">
                          <h3 class="profile-username text-center"><%= assigned.try(:school).try(:nombre) %></h3>
                          <p class="text-muted text-center"><%= assigned.try(:school).try(:commune).try(:name) %>, <%= assigned.try(:school).try(:commune).try(:region).try(:name) %></p>
                          <ul class="list-group list-group-unbordered">
                            <li class="list-group-item">
                              <b>RBD</b> <a class="pull-right"><%= assigned.try(:school).try(:rbd) %></a>
                            </li>
                            <li class="list-group-item">
                              <b>Dependencia</b> <a class="pull-right"><%= assigned.try(:school).try(:dependencia) %></a>
                            </li>
                            <a href="<%= '/schools/' + assigned.try(:school).try(:id).try(:to_s) %>"" class="btn btn-primary btn-block"><b>Ver ficha del establecimiento</b></a>
                            <a href="<%= enter_to_school_path(school_id: assigned.try(:school).try(:id)) %>" class="btn btn-primary btn-block"><b>Entrar al portal del establecimiento</b></a>

                          </ul>
                        </div>
                        <!-- /.box-body -->
                      </div>
                    </div>
                <% end %>
              <% end %>
            </div>
          </div>
          <a href="comparatives/index" class="btn btn-warning btn-block"><b>Comparar establecimientos</b></a>
        </div>
      </div>
    </div>
  </div>
</section>
  <% end %>
