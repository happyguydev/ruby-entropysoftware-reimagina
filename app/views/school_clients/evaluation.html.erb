              <div class="col-sm-6"></div>
              <div class="col-sm-6"></div>
            </div>
            <div class="row">
              <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12" style="overflow-x: auto">
                <table id='school-evaluations-table' class="table table-bordered table-hover dataTable" data-source='<%= school_client_evaluation_path(format: :json) %>'>
                  <thead>
                    <tr>
                      <th>Año</th>
                      <th>Nombre</th>
                      <th>Tipo</th>
                      <th>Asignatura</th>
                      <th>Nivel</th>
                      <th>Opciones</th>
                    </tr>
                  </thead>
                  <tbody>
                  </tbody>
                </table>
              </div>
            </div>
            <div class="row"></div>
            <div class="col-sm-7"></div>
          </div>
        </div>
      </div>
