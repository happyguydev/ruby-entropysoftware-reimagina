<%= simple_form_for(@proc_type) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
<div class="field">
  <label>Nombre</label>
  <%= f.input :nombre, :label => false, input_html: {class: 'form-control'} %>
</div>    

<div class="field">
  <label>Tipo</label>
<%= f.association :proc_type_father,:label_method => :nombre, :label => false, input_html: { class: 'chosen-select' } %></div>
</div>

<div class="field">
  <label>Orden</label>
  <%= f.input :priority, :label => false, input_html: {class: 'form-control', :type => "number"} %>
</div>

  </div>

  <div class="form-actions">
  <%= f.button :submit , 'Enviar'%>
  </div>
<% end %>
