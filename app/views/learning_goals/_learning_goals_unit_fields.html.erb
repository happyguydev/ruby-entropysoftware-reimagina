<div class="nested-fields">
    <div id="units-list">
    <label>Unidad</label>
    <%= f.association :unit, :collection => @unidades, :prompt => 'Seleccione Unidad', :label => false, input_html: {class: "chosen-select"} %>
    <label>Descripcion</label>
    <%= f.input :description, :label => false, input_html: {class: 'form-control'}%>
  </div>
  <%= link_to_remove_association "Quitar Unidad", f %>
</div>
