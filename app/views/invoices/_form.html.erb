<%= simple_form_for ([@order,@invoice]) do |f| %>
<%= f.error_notification %>

<div class="form-group col-md-2">
  <label>Folio</label>
  <%= f.input :numero, :label => false, input_html: {class: 'form-control'} %>
</div>

<div class="form-group col-md-2">
  <label>Fecha emisi√≥n</label>
<%= f.input :fecha, :as => :date_picker, :label => false, input_html: {class: 'form-control'} %>
</div>

<div class="form-group col-md-2">
  <label>Monto</label>
  <%= f.input :monto, :label => false, input_html: {class: 'form-control',  min: '0', step: 'any'} %>
</div>

<div class="form-group col-md-2">
  <label>Pagada</label>
   <%= f.input :paid, :label => false, as: :radio_buttons,:item_wrapper_class => 'inline', :default => false %>
</div>

<div class="form-group col-md-2">
  <label>Subir Factura</label>
<%= f.input :document, as: :file , :label => false %>
</div>

<div class="form-group col-md-12">
  <%= f.button :submit , 'Enviar'%>
</div>

<% end %>

