<%= simple_form_for(@feedback) do |f| %>
<%= f.error_notification %>

<div class="form-inputs">
  <%= f.association :order,:label_method => lambda { |item| "NÂ° #{item.number} #{item.year} #{item.school.nombre}".html_safe }, value_method: :id, input_html: {class: 'chosen-select'}, collection: Order.where("id NOT IN (SELECT order_id FROM feedbacks)")
%>
  <%= f.input :comentario, input_html: {class: 'form-control'} %>
