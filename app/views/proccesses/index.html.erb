<section class="content">
  <div class="row">
    <div class="col-xs-12">
      <div class="box col-sm-12 col-md-12 col-lg-12">
        <div class="box-header">
          <h3 class="box-title">Procesos asociados a orden #<%= @order.id %> <%= @order.school.nombre %></h3>
        </div>
        <!-- /.box-header -->
        <div class="box-body">
          <div class='col-md-12 col-sm-12'>
            <section class="content">
              <div class='col-md-12 col-sm-12'>
                <h3>Listado de procesos</h3>
                <table id='proccesses-table' class="table table-bordered table-hover dataTable" data-source='<%= order_proccesses_path(@order, format: :json) %>'>
                  <thead>
                    <tr>
                      <th>Proceso</th>
                      <th>Fecha de activaci√≥n</th>
                      <th>Monto</th>
                      <th>Opciones</th>
                    </tr>
                  </thead>
                  <tbody>
                  </tbody>
                </table>
              </div>
            </section>
          </div>
        </div>
      </div>
      <!-- /.box-body -->
    </div>
  </div>
</section>

<div class="col-md-12">
  <div class="box box-default collapsed-box">
    <div class="box-header with-border">
      <h3 class="box-title">Nuevo proceso</h3>
      <div class="box-tools pull-right">
        <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-plus"></i>
        </button>
      </div>
      <!-- /.box-tools -->
    </div>
    <!-- /.box-header -->
    <div style="display: none;" class="box-body">
      <%= render 'form' %>
    </div>
    <!-- /.box-body -->
  </div>
  <!-- /.box -->
</div>

<div class="col-md-12">
  <div class="box box-default collapsed-box">
    <div class="box-header with-border">
      <h3 class="box-title">Generar pago en cuotas</h3>
      <div class="box-tools pull-right">
        <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-plus"></i>
        </button>
      </div>
      <!-- /.box-tools -->
    </div>
    <!-- /.box-header -->
    <div style="display: none;" class="box-body">
      <p>Una vez agregados todos los procesos rellena el formulario para generar las cuotas de pago</p>
        <%= render 'cuotas' %>    </div>
    <!-- /.box-body -->
  </div>
  <!-- /.box -->
</div>
