<%= simple_form_for([@order,@order_status]) do |f| %>
<%= f.error_notification %>

  <div class="form-group col-md-3">
    <label>Comentario</label>
    <%= f.input :comentario, :label => false, input_html: {class: 'form-control'} %>
  </div>
  <div class="form-group col-md-3">
    <label>Estado</label>
    <%= f.association :status_type, :label_method => :nombre, :label => false, input_html: { class: 'form-control chosen-select' } %></div>

  <div class="form-actions col-md-12">
    <%= f.button :submit, 'Enviar' %>
  </div>
<% end %>
