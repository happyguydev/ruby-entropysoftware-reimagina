<%= simple_form_for @color_range, html: { class: "form-inline" } do |f| %>
<% if @color_range.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(@color_range.errors.count, "error") %> prohibited this axis from being saved:</h2>

  <ul>
    <% @color_range.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="field">
  <label>Tipo de evaluacion</label>
  <%= f.association :evaluation_type, label: false, input_html: {class: "chosen-select"} %>
</div>

<div class="field">
  <label>Asignatura</label>
  <%= f.association :assignature, label: false, input_html: {class: "chosen-select"} %>
</div>

<div class="field">
  <label>Nivel</label>
  <%= f.association :level, label: false, input_html: {class: "chosen-select"} %>
</div>

<div class="field">
  <label>Nombre</label>
  <%= f.input :nombre, label: false, input_html: {class: 'form-control'} %>
</div>

<div class="field">
  <label>Valor inicial (puntaje o %)</label><br>
  <%= f.input :min, :label => false, input_html: {class: 'form-control'}  %>
</div>

<div class="field">
  <label>Valor final (puntaje o %)</label><br>
  <%= f.input :max, :label => false, input_html: {class: 'form-control'} %>
</div>

<div class="field">
  <label>Color</label><br>
  <%= f.input :color, as: :minicolors,:label => false %>
</div>

<div class="actions">
  <%= f.submit "Enviar"%>
</div>
<% end %>





