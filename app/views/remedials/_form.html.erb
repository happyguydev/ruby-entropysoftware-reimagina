<%= simple_form_for(@remedial) do |f| %>
<%= f.error_notification %>

<div class="form-inputs">

</div>

<div class="field">
  <label>Nombre</label>
  <%= f.input :nombre,  label: false ,input_html: {class: 'form-control', rows:2} %>
</div>

<div class="field">
  <label>Asignatura</label><br>
  <%= select_tag :assignature, options_for_select(assignature_options),label: false , class: "chosen-select remedial_select" %>
</div>

<div class="field content_field">
  <label>Contenido</label>
  <%= f.association :content, label: false, input_html: {class: "chosen-select remedial_select"} %>
</div>

<div class="field level_field">
  <label>Nivel</label>
  <%= f.association :level, label: false, input_html: {class: "chosen-select"} %>
</div>


<div class="form-actions">
  <%= f.button :submit %>
</div>
<% end %>
