<%= simple_form_for(@feed_item) do |f| %>
<%= f.error_notification %>

<div class="form-group col-md-2">
  <label>Nombre</label>
  <%= f.input :nombre, :label => false, input_html: {class: 'form-control'} %>
</div>

<div class="form-group col-md-12">
  <%= f.button :submit , 'Enviar'%>
</div>

<% end %>
