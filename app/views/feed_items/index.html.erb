<section class="content">
  <div class="row">
    <div class="col-xs-12">
      <div class="box col-sm-12 col-md-12 col-lg-12">
        <div class="box-header">
          <h3 class="box-title">Ítems fidelización</h3>
        </div>
        <!-- /.box-header -->
        <div class="box-body">
          <table class="table table-bordered table-hover dataTable">
            <thead>
              <tr>
                <th>Nombre</th>
                <th colspan="2"></th>
              </tr>
            </thead>

            <tbody>
              <% @feed_items.each do |feed_item| %>
              <tr>
                <td><%= feed_item.nombre %></td>
                <td><%= link_to 'Editar', edit_feed_item_path(feed_item) %></td>
                <td><%= link_to 'Eliminar', feed_item, method: :delete, data: { confirm: 'Seguro de que quieres eliminar el registro?' } %></td>
              </tr>
              <% end %>
            </tbody>
          </table>
          <h3>Agregar Ítem</h3>
          <%= render 'form' %>
        </div>
      </div>
      <!-- /.box-body -->
    </div>
  </div>
</section>