<p id="notice"><%= notice %></p>

<h1>Listing Fact Status Types</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @fact_status_types.each do |fact_status_type| %>
      <tr>
        <td><%= fact_status_type.nombre %></td>
        <td><%= link_to 'Show', fact_status_type %></td>
        <td><%= link_to 'Edit', edit_fact_status_type_path(fact_status_type) %></td>
        <td><%= link_to 'Destroy', fact_status_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

