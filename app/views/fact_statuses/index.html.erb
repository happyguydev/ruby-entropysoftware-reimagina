<p id="notice"><%= notice %></p>

<h1>Listing Fact Statuses</h1>

<table>
  <thead>
    <tr>
      <th>Order</th>
      <th>Fact status type</th>
      <th>Comentario</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @fact_statuses.each do |fact_status| %>
      <tr>
        <td><%= fact_status.order %></td>
        <td><%= fact_status.fact_status_type %></td>
        <td><%= fact_status.comentario %></td>
        <td><%= link_to 'Show', fact_status %></td>
        <td><%= link_to 'Edit', edit_fact_status_path(fact_status) %></td>
        <td><%= link_to 'Destroy', fact_status, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

