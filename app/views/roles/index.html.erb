<h1>Listing Roles</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @roles.each do |role| %>
      <tr>
        <td><%= role.name %></td>
        <td><%= link_to 'Show', user_role_path(@user, role) %></td>
        <td><%= link_to 'Edit', edit_user_role_path(@user, role) %></td>
        <td><%= link_to 'Destroy', user_role_path(@user, role), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Role', new_user_role_path %>
