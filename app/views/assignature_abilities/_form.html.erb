<%= simple_form_for(@assignature_ability) do |f| %>
<%= f.error_notification %>

<div class="field">
  <label>Asignatura</label>
  <%= f.association :assignature, label: false, input_html: {class: "chosen-select"} %>
</div>

<div class="field">
  <label>Nombre</label>
  <%= f.input :nombre, :label => false, input_html: {class: 'form-control'} %>
</div>

<div class="field">
  <label>Descripcion</label><br>
  <%= f.input :descripcion, :label => false, input_html: {class: 'form-control'} %>
</div>
<div class="actions">
  <%= f.submit "Enviar"%>
</div>

<% end %>
